import java.util.Scanner;
public class Principal {
static Scanner in = new Scanner(System.in);
	public static void main(String[] args) {

		Triangulo triangulo1 = new Triangulo();
		
		System.out.println("\nCalcular triangulo");
		System.out.println("Digite a base");
		triangulo1.base = in.nextDouble();
		System.out.println("Digite a altura");
		triangulo1.altura = in.nextDouble();
		
		System.out.println("A area do triangulo �: "+triangulo1.calcularArea());
		
		Retangulo retangulo1 = new Retangulo();
		
		System.out.println("\nCalcular retangulo");
		System.out.println("Digite a base");
		retangulo1.base = in.nextDouble();
		System.out.println("Digite a altura");
		retangulo1.altura = in.nextDouble();
		
		System.out.println("A area do triangulo �: "+retangulo1.calcularArea());
	}

}

public class Retangulo {

	double altura;
	double base;
	
	double calcularArea(){
		
		return base*altura;
	}
}

public class Triangulo {

	double altura;
	double base;
	
	double calcularArea(){
		
		return base*altura/2;
	}
}

